extends layout

block content
  .spacer
  .container
    .row
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
        h1 Edit Steps

        form(class='form', method='POST', action="/steps/#{step.StepID}?_method=PUT")
          .form-group
            label Date
            input.form-control(type="date", name='stepDate', value='#{step.Steps_date}')
          .form-group
            label Number Of Steps
            input.form-control(type="number", name='stepNumber', value='#{step.Steps_number}')
          button(type="submit" class="btn btn-primary") Save Steps
