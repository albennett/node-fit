extends layout

block content
  .container
    .row
      .col-lg-12.col-md-12

        h1 Show All Steps
        h4.text-center
          a(href="/steps/new") Create New Steps Entry
        table(class='table table-hover')
          caption Steps
          tr
            th Date
            th Number Of Steps

          each step in steps
            tr
              td #{step.Steps_date}
              td #{step.Steps_number}
              td
                a(href="/steps/#{step.StepID}/edit") Edit
              td
                form(class='form', method='POST', action="/steps/#{step.StepID}?_method=DELETE")
                  button(type="submit" class="btn btn-danger") Delete Steps
